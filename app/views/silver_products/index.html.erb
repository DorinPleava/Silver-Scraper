<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.11.3/datatables.min.css"/>
 

<%= button_to 'Scrape', scrape_silver_products_path %>

<p id="notice"><%= notice %></p>

<h1>Silver Products</h1>

<table id="example" class="display" style="width:100%">
   <tfoot>
            <tr>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </tfoot>
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>In stock</th>
      <th>Total Price</th>
      <th>Price per oz</th>
      <th>Pieces</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @silver_products.each do |silver_product| %>
      <tr>
        <td><%= silver_product.date_parsed %></td>
        <td><%= silver_product.title %></td>
        <td><%= silver_product.in_stock %></td>
        <td><%= silver_product.total_price %></td>
        <td><%= silver_product.price_per_oz %></td>
        <td><%= silver_product.pieces %></td>
        <% if false %>
          <td><%= link_to 'Show', silver_product %></td>
          <td><%= link_to 'Edit', edit_silver_product_path(silver_product) %></td>
          <td><%= link_to 'Destroy', silver_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>

</table>
<br>

<%= link_to 'New Silver Product', new_silver_product_path %>
